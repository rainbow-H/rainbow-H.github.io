    <title>【洛谷记录】02_P1059明明的随机数</title>
    <link href="https://rainbow-h.github.io/2022/07/30/%E3%80%90%E6%B4%9B%E8%B0%B7%E8%AE%B0%E5%BD%95%E3%80%9102-P1059%E6%98%8E%E6%98%8E%E7%9A%84%E9%9A%8F%E6%9C%BA%E6%95%B0/"/>
    <id>https://rainbow-h.github.io/2022/07/30/%E3%80%90%E6%B4%9B%E8%B0%B7%E8%AE%B0%E5%BD%95%E3%80%9102-P1059%E6%98%8E%E6%98%8E%E7%9A%84%E9%9A%8F%E6%9C%BA%E6%95%B0/</id>
    <published>2022-07-30T06:59:44.000Z</published>
